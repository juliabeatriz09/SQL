--Listar todos os alunos
SELECT * FROM aluno ;

--Listar todos os encaminhamentos
SELECT * FROM encaminhamento ;

--Listar todos os F.Os
SELECT * FROM fato  ;

--Listar todos as ocorrencias
SELECT * FROM ocorrencia ;

--Listar todos os funcionarios 
SELECT * FROM funcionario  ;

--Listar todos as frequencias
SELECT * FROM frequencia;

--Listar todos as atas
SELECT * FROM ata ;

--Listar todos os encaminhamentos ordenados aluno 
SELECT * FROM encaminhamento ORDER BY cgm;

--Listar todos os frequencia ordenados aluno 
SELECT * FROM frequencia ORDER BY cgm; 

--Listar todos os alunos ordenados nome
SELECT * FROM aluno  ORDER BY nome;
